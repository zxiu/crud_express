%table.table
  %thead
    %tr
      - entries.column_names.each do |column_name|
        - unless @helper.hidden?(column_name)
          %td
            = column_name
      %td
        = link_to controller: params[:controller], action: :new, method: :get, remote: true do
          .btn.btn-sm.btn-warning
            %span.glyphicon.glyphicon-plus
        = link_to controller: params[:controller], action: :index, method: :get, remote: true do
          .btn.btn-sm.btn-success
            %span.glyphicon.glyphicon-refresh

  %tbody{class: entries.model_name}
    - entries.each do |entry|
      -# = entry.try("tags").inspect if entry[:id] == 1
      -# = entry.class.reflect_on_all_associations.map{|reflect| reflect.macro}  if entry[:id] == 1
      = @helper.includes_models.inspect if entry[:id] == 1
      = render partial: 'shared/cruds_express/model/entry', object: entry

:css
  td {
    max-width:50px!;
  }

  .btn-delete{
    opacity: 0.1;
  }

  .btn-delete:hover{
    opacity: 0.8;
  }
